<main>
  <div class="conteiner mt-4">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-3 px-5 ml-5">
        <h2>Sign up</h2>
        <%= form_with model:@user, url:user_registration_path, id:'new_user', class: "new-user" do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field">
            <%= f.label :name, class:"mb-1" %><br/>
            <%= f.text_field :name, class:"mb-2" %>
          </div>

          <div class="field">
            <%= f.label :email, class:"mb-1" %><br/>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"mb-2" %>
          </div>

          <div class="field">
            <%= f.label :password, class:"mb-1" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br/>
            <%= f.password_field :password, autocomplete: "new-password", class:"mb-2" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, class:"mb-1" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"mb-2" %>
          </div>

          <div class="actions my-1">
            <%= f.submit "Sign up", class:"btn btn-success btn-sm" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</main>

