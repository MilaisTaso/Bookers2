<main>
  <div class="conteiner mt-4">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-3 px-5 ml-5">
        <h2>Log in</h2>
        <%= form_with model:@user, url:user_session_path do |f| %>
        <div class="field">
          <%= f.label :name, class:"mb-1" %><br/>
          <%= f.text_field :name, autofocus: true, class:"mb-2" %>
        </div>

        <div class="field">
          <%= f.label :password, class:"mb-1" %><br/>
          <%= f.password_field :password, autocomplete: "current-password", class:"mb-2" %>
        </div>

        <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class:"btn btn-info btn-sm mb-1" %>
        </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</main>
