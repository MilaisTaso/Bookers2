<main>
  <div class="cotaner mt-4">
    <%= flash[:notice] %>
    <div class="row">
      <div class="col-sm-11 col-md-8 col-lg-5 mx-auto">
        <% if @post.errors.any? %>
          <h3><%= @post.errors.count %>件のエラー</h3>
          <ul>
            <% @post.errors.full_messages.each do |message|%>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <h2>User info</h2>
        <%= form_with model:@post, method: :put do |f| %>
          <div class="form-group">
            <%= f.label :Name, class:"mb-1" %><br/>
            <%= f.text_field :name, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :Image, class:"mb-1" %><br/>
            <%= f.file_field :user_image, accept:"image/*" %>
          </div>
          <div class="form-group">
            <%= f.label :Introduction, class:"mb-1" %><br/>
            <%= f.text_area :introduction, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit 'Update User', class:"btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>

