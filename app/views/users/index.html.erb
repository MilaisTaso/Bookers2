<main class="px-5 mt-4">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'shared/profile', user:@user %>
        <%= render 'shared/form', post:@post, form_text: 'Create Book' %>
      </div>
      <div class="col-md-8 offset-md-1">
        <%= render 'shared/head' %>
          <% @users.each do |user| %>
            <tr>
              <td><%= link_to user_path(user.id) do%>
                <%= image_tag user.get_user_image(100,100) %>
                <% end %>
              </td>
              <td><%= user.name%></td>
              <td><%= link_to 'Show',user_path(user.id) %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
