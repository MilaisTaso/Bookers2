<div class="container px-5 mt-4 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render 'shared/profile', user:@user %>
        <%= render 'shared/form', post:@post, form_text: 'Create Book' %>
      </div>
      <div class="col-md-8 offset-md-1">
        <%= render 'shared/head' %>
          <% @books.each do |book| %>
            <tr>
              <td class="d-inline-flex">
                <%= link_to user_path(book.id)  do %>
                  <%= image_tag book.user.get_user_image(100,100) %>
                  <p class="mb-0 w-100"><%= book.user.name %></p>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body%></td>

              <%= render 'shared/under', book:book %>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

