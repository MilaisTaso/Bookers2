<main>
  <div class="container px-5 mt-4">
    <div class="row">
      <div class="col-md-3">
        <%= render 'shared/profile', user:@user %>
        <%= render 'shared/form', post:@post, form_text: 'Create Book' %>
      </div>
      <div class="col-md-8 offset-md-1">
        <%= render 'shared/head' %>
            <% @books.each do |book| %>
              <tr>
                <%= render 'shared/table', book:book %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>

